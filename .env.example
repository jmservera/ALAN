# Environment Variables Configuration

# Copy this file to .env and fill in your values
# Then source it: source .env

# OpenAI Configuration
export OPENAI_API_KEY="sk-your-openai-api-key-here"
export OPENAI_MODEL_ID="gpt-4o-mini"

# Alternative: Azure OpenAI Configuration
# export AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
# export AZURE_OPENAI_API_KEY="your-azure-openai-key"
# export AZURE_OPENAI_DEPLOYMENT="gpt-4"

# Application Settings
export ASPNETCORE_ENVIRONMENT="Development"

# Optional: Custom Agent Settings
# export AGENT_THINK_INTERVAL="5"  # seconds between thoughts
# export AGENT_MAX_THOUGHTS="100"  # maximum thoughts to keep in memory
# export AGENT_MAX_ACTIONS="50"    # maximum actions to keep in memory
