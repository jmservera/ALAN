# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy solution and project files
COPY ["ALAN.sln", "./"]
COPY ["src/ALAN.Agent/ALAN.Agent.csproj", "src/ALAN.Agent/"]
COPY ["src/ALAN.Web/ALAN.Web.csproj", "src/ALAN.Web/"]
COPY ["src/ALAN.Shared/ALAN.Shared.csproj", "src/ALAN.Shared/"]

# Restore dependencies
RUN dotnet restore "ALAN.sln"

# Copy all source files
COPY . .

# Build the web project
WORKDIR "/src/src/ALAN.Web"
RUN dotnet build "ALAN.Web.csproj" -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish "ALAN.Web.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Final stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
EXPOSE 80
EXPOSE 443

COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ALAN.Web.dll"]
